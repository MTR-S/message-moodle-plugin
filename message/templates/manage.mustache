<h2>Mensagens</h2>
<div class="message-container">
    {{#messages}}
        <div class="message-card {{typeclass}}">
            <p class="message-text">{{messagetext}}</p>
            <span class="message-label">{{typeclass}}</span>
        </div>
    {{/messages}}
    {{^messages}}
        <p>Nenhuma mensagem dispon√≠vel.</p>
    {{/messages}}
</div>

<div class="button-container">
    <button class="btn-create" onclick="location.href='{{editurl}}'">Criar Nova Mensagem</button>
</div>

<style>
/* Estilos para o template de mensagens */
h2 {
    text-align: center;
    color: #0073e6;
    margin-bottom: 20px;
}

.message-container {
    display: flex;
    flex-direction: column;
    gap: 15px;
    max-width: 600px;
    margin: 0 auto;
}

.message-card {
    border-radius: 8px;
    padding: 15px;
    color: #fff;
    font-family: Arial, sans-serif;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.message-text {
    font-size: 16px;
    margin-bottom: 10px;
}

.message-label {
    font-size: 12px;
    padding: 5px 10px;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.2);
}

.success {
    background-color: #28a745;
}

.warning {
    background-color: #ffc107;
}

.error {
    background-color: #dc3545;
}

.info {
    background-color: #17a2b8;
}

.button-container {
    text-align: center;
    margin-top: 20px;
}

.btn-create {
    background-color: #0073e6;
    border: none;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn-create:hover {
    background-color: #005bb5;
}
</style>
